<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Lay"
    tools:context="com.example.gk.paythepiper.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Sir!"
        android:textSize="34sp"
        android:layout_marginTop="37dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginTop="87dp"
        android:paddingLeft="16dp"

        android:text="Your bill amount is: "
        android:textSize="24dp" />
    <TextView
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="00"
        android:paddingTop="5dp"
        android:id="@+id/Bill"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/text"
        android:layout_marginStart="15dp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:id="@+id/RS"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="₹1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:onClick="CLICK1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="₹2"
            android:textStyle="bold"
            android:textSize="16dp"
            android:onClick="CLICK2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="₹5"
            android:onClick="CLICK5"
            android:textStyle="bold"
            android:textSize="16dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="₹10"
            android:textStyle="bold"
            android:id="@+id/R10"
            android:textSize="16dp"
            android:onClick="CLICK10"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count:"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"

        android:textColor="@android:color/black"
        android:layout_below="@id/RS"
        android:id="@+id/textView2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/RS"
        android:layout_marginTop="5dp"
        android:paddingLeft="0dp"
        android:id="@+id/count">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp"
            android:layout_weight="1"
            android:textAlignment="center"

            android:id="@+id/count_msg_1"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp"
            android:id="@+id/count_msg_2"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textAlignment="center"

            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#FF00FF"
            android:id="@+id/count_msg_5"

            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textSize="26dp"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/count_msg_10"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"

            android:textSize="26dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Paid: 0"
        android:textColor="#000000"
        android:textSize="32dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/total"
        android:layout_marginTop="16dp"
        android:layout_below="@id/count"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIT ME TO RESET"
        android:textColor="#000000"
        android:onClick="Reset"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="10dp"
        android:id="@+id/button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YEAH!!You paid ALL..."
        android:textSize="28dp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:visibility="invisible"
        android:id="@+id/msg"
        android:layout_marginTop="350dp"



        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />
</RelativeLayout>

